; File managed by puppet

<% if zone_ttl != '' -%>
$TTL <%=zone_ttl%>
<% end -%>
@ <%= zone_class %> SOA <%= zone_name %> <%= real_zone_contact %> (
      <%= zone_serial %>  ; serial
      <%= zone_refresh %> ; refresh
      <%= zone_retry %>   ; retry
      <%= zone_expire %>  ; expire
<% if zone_neg_cache != '' -%>
      <%= zone_neg_cache %> ; TTL
<% end -%>
    );
<% real_zone_ns.each do |ns| -%>
@ IN NS <%=ns%>
<% end -%>
